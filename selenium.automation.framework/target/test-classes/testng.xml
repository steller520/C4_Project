<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Automation Test Suite" verbose="1" parallel="false" thread-count="1">
    
    <!-- Global parameters -->
    <parameter name="browser" value="chrome"/>
    
    <!-- Listeners for custom reporting and logging -->
    <listeners>
        <listener class-name="selenium.automation.framework.listeners.TestListener"/>
    </listeners>
    
    <!-- Login Tests -->
    <test name="Sign Up Test Suite" preserve-order="true">
        
        <parameter name="name" value="John Doe"/>
        <parameter name="email" value="john.doe@example.com"/>
         
        <classes>
            <class name="selenium.automation.framework.tests.SignUp.TestCase01"/>
            <class name="selenium.automation.framework.tests.SignUp.TestCase02"/>
            <class  name="selenium.automation.framework.tests.SignUp.TestCase03"/>
        </classes>
    </test>
</suite>
